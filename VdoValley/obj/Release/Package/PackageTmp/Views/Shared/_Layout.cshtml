                <div class="col-md-4 content-bottom">
                    <div class="story"><h4 class="stories"><span>Top Videos</span></h4></div>
                    <!---->
                    <div class="cd-tabs">
                        <ul class="cd-tabs-content">
                            <li data-content="cinema" class="selected">
                                <style>
                                    .grid-men a img {
                                        width: 95%;
                                        max-width: 95%;
                                        min-width: 90%;
                                        height: 80px;
                                        max-height: 80%;
                                        min-height: 75%;
                                    }
                                </style>
                                @{
                                    int counter = 0;
                                    VdoValley.Models.VdoValleyContext db = new VdoValley.Models.VdoValleyContext();
                                    List<VdoValley.Models.Video> AllVideos = db.Videos.ToList();
                                    foreach (VdoValley.Models.Video video in AllVideos)
                                    {
                                        <div class="men">
                                            <div class="grid-men">
                                                <a href="/Videos/Details/@video.VideoId"><img src="@video.getDailyMotionThumb(video.getDailyMotionVideoCode(video.Url), VdoValley.Models.DailymotionThumbnailSize.thumbnail_large_url)" class="img-responsive" alt="@video.Title"> </a>
                                            </div>
                                            <div class="men-grid">
                                                <h5><a href="/Videos/Details/@video.VideoId">@video.Title</a></h5>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                        counter++;
                                        if (counter.Equals(5)) { break; }
                                    }
                                }
                            </li>
                            <div class="clearfix"></div>
                        </ul>
                    </div>
                    <!---->
                    <div class="grid-top">
                        <h4>Recent Comments</h4>
                        <ul>
                            @{
                                using (WebClient client = new WebClient())
                                {
                                    string s = client.DownloadString("https://disqus.com/api/3.0/forums/listPosts.json?order=desc&forum=vdovalley&api_key=M02296gbyd8Z6NCaSx7V0oRUAJyj0eiczZLkV4FTKJORcQi1aKlRxNiGMf1R6NPg&related=thread");
                                    var comments = new
                                    {
                                        response = new[]
                                {
                                    new
                                    {
                                        forum = string.Empty,
                                        raw_message = string.Empty,
                                        url = string.Empty
                                    }
                                }
                                    };

                                    comments = Newtonsoft.Json.JsonConvert.DeserializeAnonymousType(s, comments);
                                    for (int i = 0; i < comments.response.Length; i++)
                                    {
                                        int maxCommentLength = 100;
                                        string comment = string.Empty;
                                        if (comments.response[i].raw_message.Length > maxCommentLength) { comment = comments.response[i].raw_message.Substring(0, maxCommentLength - 1) + "..."; } else { comment = comments.response[i].raw_message; }
                                        <li><p><a href="@comments.response[i].url">@comment</a></p></li>
                                    }
                                }
                            }
                        </ul>
