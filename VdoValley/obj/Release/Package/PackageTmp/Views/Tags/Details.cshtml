@{
    ICollection<VdoValley.Models.Video> videos = Model.Videos;
    foreach (var video in videos)
    {
        <div>
            @Html.ActionLink(video.Title,
                "Details",   // <-- ActionMethod
                "Videos",  // <-- Controller Name.
                 new { id = video.VideoId }, // <-- Route arguments. using "video.VideoId" only will cause ?VideoId=ID in url
                null  // <-- htmlArguments
            )
        </div>
    }
}

